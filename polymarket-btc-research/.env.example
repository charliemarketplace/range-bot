# Polymarket BTC Research Environment Variables

# Polygon RPC URL (use a dedicated provider for production)
# Free options: Alchemy, Infura, QuickNode
POLYGON_RPC_URL=https://polygon-rpc.com

# Optional: Alchemy API key for better rate limits
ALCHEMY_API_KEY=your_alchemy_api_key_here

# Optional: Chainlink Data Streams API credentials (for high-frequency historical data)
CHAINLINK_API_KEY=your_chainlink_api_key_here
CHAINLINK_API_SECRET=your_chainlink_api_secret_here

# Data output directory
DATA_DIR=./data

# Trading parameters (for future live trading)
MIN_EDGE_THRESHOLD=0.05  # 5% minimum edge to trade
MAX_POSITION_SIZE=100    # Maximum USDC per position
ENABLE_TRADING=false     # Safety flag
